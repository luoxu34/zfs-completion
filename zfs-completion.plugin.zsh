## Aliases

alias pa='sudo zpool add'
alias pc='sudo zpool create'
alias pd='sudo zpool destroy'
alias pl='sudo zpool list'
alias pi='sudo zpool import'
alias pe='sudo zpool export'

alias zc='sudo zfs create -p'
alias zd='sudo zfs destroy -Rf'
alias zl='sudo zfs list'
alias zls='sudo zfs list -t snapshot'
alias zcl='sudo zfs clone -p'
alias zsp='sudo zfs snapshot'
alias znfs='sudo zfs set sharenfs=on'

alias zpool='sudo zpool'
alias zfs='sudo zfs'
